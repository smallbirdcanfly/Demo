<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#50B2F0"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:weightSum="4"
        android:gravity="center"
        android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
        android:textSize="15sp"
                android:drawablePadding="5dp"
        android:drawableLeft="@drawable/cancle_time"
        android:textColor="@color/text_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="期号"/>
        <TextView
            android:layout_weight="1"
            android:textSize="15sp"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/cancle_content"
            android:textColor="@color/text_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投注内容"/>

        <TextView
            android:layout_weight="1"
            android:textSize="15sp"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/cancle_money"
            android:textColor="@color/text_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金额"/>

        <TextView
            android:layout_weight="1"
            android:textSize="15sp"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/cancle_op"
            android:textColor="@color/text_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="操作"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/text_white"
        android:layout_height="1dp"/>
    <!--<com.fz.cdh.pcdd.ui.widget.refresh.PullLoadMoreRecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rvData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>-->
    <ListView
        android:id="@+id/rvData"
        android:dividerHeight="1px"
        android:divider="@color/black_deep"
        android:listSelector="#00000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>